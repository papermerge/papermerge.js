<ul class="dropdown-menu context-menu">

  <Viewer::ContextMenu::Item::Rename
    @openRenameDocumentModal={{@openRenameDocumentModal}} />

  {{#if this.one_or_multiple_pages_selected}}
    <ContextMenu::Devider />

    <Viewer::ContextMenu::Item::Rotate
      @onRotateClockwise={{@onRotateClockwise}} />

    {{#if this.show_move_item}}
      <Viewer::ContextMenu::Item::Move
        @hint={{@hint}}
        @swap_panels={{@swap_panels}}
        {{on "click" @openMovePagesModal}} />
    {{else if this.show_extract_item}}
      <Viewer::ContextMenu::Item::Extract
        @hint={{@hint}}
        @swap_panels={{@swap_panels}}
        {{on "click" @openExtractPagesModal}} />
    {{/if}}

    <ContextMenu::Devider />

    <Viewer::ContextMenu::Item::DeletePages
      @openConfirmDeletionModal={{@openConfirmDeletionModal}} />
  {{else}}
    {{! No pages are selected }}
    {{! Show document merge menu only if there are NO SELECTED PAGES }}
    {{#if this.show_merge_item}}
      {{! Show item only if there is another viewer opened }}
      <ContextMenu::Devider />

      <Viewer::ContextMenu::Item::Merge
        @hint={{@hint}}
        @swap_panels={{@swap_panels}}
        {{on "click" @openConfirmMergeDocumentModal}} />
    {{/if}}
  {{/if}} {{! if this.one_or_multiple_pages_selected }}

  <ContextMenu::Devider />

  <Viewer::ContextMenu::Item::DeleteDocument
    @openConfirmDeleteDocumentModal={{@openConfirmDeleteDocumentModal}} />

</ul>
