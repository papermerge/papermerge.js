<main>
  <Nav::Sidebar
    @home_folder_id={{@model.home_folder_id}}
    @inbox_folder_id={{@model.inbox_folder_id}}
    @inbox_count={{@model.inbox_count}}
    @pinned_tags={{@model.pinned_tags}}
    @expanded={{this.expanded_sidebar}} />
  <div class="w-100 central-bar">
    <Notifications />
    <Nav::Topbar
      @onSidebarToggle={{this.onSidebarToggle}}
      @openAboutModal={{this.openAboutModal}} />
    <div class="container-fluid mx-2 my-1">
      {{outlet}}
    </div>
  </div>
  <Modal::About
    @getPapermergeVersion={{this.getPapermergeVersion}}
    @papermerge_version_result={{this.papermerge_version_result}}
    @onClose={{this.onCloseAboutModal}}
    {{show-when this.show_about_modal}} />
</main>
